{% import "../fragments/image.njk" as images %}

{% macro posts_feed(posts, posts_class, image_size) %}
  <section class="posts {{ posts_class }}">
    {% for post in posts %}
      <div class="post">
        <h3 class="post-title"><a href="">{{ post.title }}</a></h3>
        {{ images.image_placeholder(size=image_size) }}
        <p>{{ post.text }}</p>
      </div>
    {% endfor %}
  </section>
{% endmacro %}
