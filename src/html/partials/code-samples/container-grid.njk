    <span class="code-sample__property">--gutter:</span> <span class="code-sample__value">1.5rem</span>;
    <span class="code-sample__property">--margin:</span> <span class="code-sample__value">3rem</span>;
    <span class="code-sample__property">--container-width:</span> <span class="code-sample__value">var(--container-width-8)</span>;
    <span class="code-sample__property">--column-count:</span> <span class="code-sample__value">var(--column-count-768)</span>;
    <span class="code-sample__property">--container-grid-column-count:</span> <span class="code-sample__value">var(--container-grid-column-count-768)</span>;
    <span class="code-sample__property">--grid-template-areas:</span> <span class="code-sample__value">"fm1 m1 c1 g1 c2 g2 c3 g3 c4 g4 c5 g5 c6 m2 fm2"</span>;
  }
}
