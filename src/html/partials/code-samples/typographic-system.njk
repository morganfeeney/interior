{% extends "../../blocks/code-sample/code-sample.njk" %}
{% set language="css" %}
{% block code %}<span class="comment">// A code sample</span>
:root {
  --font-size-1: 0.750rem; /* 12px */
  --font-size-2: 1rem; /* 16px */
  --font-size-3: 1.375rem; /* 22px */
  --font-size-4: 1.75rem; /* 28px */
  --font-size-5: 2rem; /* 32px */
  --font-size-6: 2.25rem;  /* 36px */
  --font-size-7: 3rem; /* 48px */
}

.heading {
  font-size: var(--font-size-1);
}

@media (min-width: 768px) {
  .heading {
    font-size: var(--font-size-3);
  }
}
{% endblock %}
