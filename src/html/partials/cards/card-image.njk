{% macro image_placeholder (size="360", text="IMAGE", class) %}
  <img class="{{ class }}" src="http://placehold.it/{{ size }}/FFF1F1/FF7070?text={{ text }}" alt="" />
{% endmacro %}

{% macro image_figure_placeholder (size="360", text="IMAGE", figure_class, image_class, caption) %}
<figure class="{{ figure_class }}">
  <img class="{{ image_class }}" src="http://placehold.it/{{ size }}/FFF1F1/FF7070?text={{ text }}" alt="" />
  {% if caption %}
    <figcaption>{{ caption }}</figcaption>
  </figure>
  {% endif %}
{% endmacro %}
