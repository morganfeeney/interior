{% import "../macros/macro-image.njk" as images %}
{% set title = page | capitalize | replace("-", " ") %}
{% if development %}
	{% set home_url = "http://local.interior.com/" %}
{% else %}
	{% set home_url = "http://interiorsystem.co.uk/" %}
{% endif %}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>{% if page_title %}{{ page_title | safe }}{% else %}{{ title | safe }}{% endif %}</title>
		<meta name="description" content="{% if page_description %}{{ page_description | safe }}{% else %}TBA{% endif %}">
		{% block linked_css %}
			<link rel="stylesheet" href="/css/style.css">
		{% endblock %}
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{% block header_scripts %}
			{% include "partials/head-scripts.njk" %}
		{% endblock %}
		{% block embedded_css %}
		{% endblock %}
	</head>
	<body class="page-{{ page }} {{ layout_classes }} {{ body_classes }}">
		{% block header %}
		<header id="main-header" class="container-outer {{ main_header_classes }}">
			<div class="container">
				{% block header_content %}
					<a id="main-header-home-link" class="home-link" href="{{ home_url }}"><p>Interior</p><p>Layout system</p></a>
					<nav id="main-nav">
						<a href="{{ home_url }}docs">Docs</a>
						<a href="{{ home_url }}examples">Examples</a>
					</nav>
				{% endblock %}
			</div>
		</header>
		{% endblock %}
		<article id="main-article" class="container-outer {{ article_classes }}">
			<main class="container-outer {{ main_classes }}">
				<div class="container {{ container_class }}">
					{% block main %}{% endblock %}
				</div>
			</main>
			{% if post_page %}
				{% block posts_nav %}
					<section id="posts-nav-section" class="container-outer {{ posts_nav_section_classes }}">
						<div class="container">
							{% block posts_nav_content %}
								{% include "../partials/components/posts-nav.njk" %}
							{% endblock %}
						</div>
					</section>
				{% endblock %}
			{% endif %}
		</article>
		{% block main_footer %}
			<footer id="main-footer" class="container-outer {{ main_footer_classes }}">
				<div class="container">
					{% block footer %}
						{% include "partials/footer.njk" %}
					{% endblock %}
				</div>
			</footer>
		{% endblock %}
		{% if development %}
			{% block footer_scripts %}
				{% include "../partials/footer-scripts.njk" %}
				<script>
					{% block overlay %}
						(function($) {
							overlayToggle(4);
						})($);
					{% endblock %}
				</script>
			{% endblock %}
		{% else %}
		  {# NOWT #}
		{% endif %}

	</body>
</html>
